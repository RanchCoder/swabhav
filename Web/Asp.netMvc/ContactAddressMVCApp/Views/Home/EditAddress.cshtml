@model ContactAddressMVCApp.ViewModels.EditAddressVM

@{
    ViewBag.Title = "EditAddress";
}


<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">

        <div class="page-header center-text">
            <h3>Edit Address</h3>

        </div>
        @using (Html.BeginForm("SaveEditedAddress", "Home", FormMethod.Post))
        {
            <div class="form-group">


                @Html.HiddenFor(m => m.Id, new { htmlAttributes = new { @class = "form-control", @text = Model.Id } })

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "control-label col-md-3" })


                @Html.EditorFor(m => m.Location, new { htmlAttributes = new { @class = "form-control", @text = Model.Location } })
                @Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger", @style = "margin-left:30px;" })



            </div>

            <div class="form-group">


                @Html.HiddenFor(m => m.IdOfContact, new { htmlAttributes = new { @class = "form-control", @text = Model.IdOfContact } })

            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-success" style="margin-top:10px" />
                </div>
            </div>

        }
    </div>

    <div class="col-md-3"></div>
</div>


