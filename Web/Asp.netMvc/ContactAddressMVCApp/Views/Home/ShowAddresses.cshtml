@model List<ContactAddressMVCApp.ViewModels.ViewAllAddressesVM>

@{
    ViewBag.Title = "ShowAddresses";
}


<div class="page-header center-text">
    <h2>Address of Contact</h2>
</div>




@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>@ViewBag.Message</strong>
    </div>

}


<table class="table">
    <tr>
        <th> Id</th>

        <th>Location</th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(listItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(listItem => item.Location)
            </td>

            <td>
                @Html.ActionLink("Edit Address", "EditAddress", new {addressId = item.Id, contactId = item.ContactId })
            </td>

        </tr>
    }
</table>



