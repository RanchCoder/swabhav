
@{
    ViewBag.Title = "Index";
}






@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>@ViewBag.Message</strong>
    </div>

}

<div class="row">
    <div class="col-md-3">


    </div>
    <div class="col-md-6">
        <div class="page-header center-text">
            <h2>Managing contacts has never been so easy before!</h2>
        </div>
        <div class="link-btn">
            <button class="btn btn-light">
                @Html.ActionLink("View Contacts", "ViewContacts")

            </button>
            <button class="btn btn-light">
                @Html.ActionLink("Add A Contact", "AddContact")

            </button>



        </div>


    </div>
    <div class="col-md-3"></div>
</div>

