<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

</head>
<body>
    <nav class="navbar navbar-custom">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">
                    Custom Master Page
                </a>
            </div>

            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index")</li>

                    <li>@Html.ActionLink("About", "About")</li>

                    <li>@Html.ActionLink("Contact Us", "ContactUs")</li>

                    <li class="link-right">@Html.ActionLink("Login", "Login")</li>
                    <li class="link-right">@Html.ActionLink("Sign Up", "SignUp")</li>

                </ul>

                
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>
