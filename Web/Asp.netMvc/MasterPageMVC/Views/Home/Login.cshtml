
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_CustomLayoutPage.cshtml";
}




<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="page-header center-text">
            <h3>Login Page</h3>
        </div>
        @using (Html.BeginForm("AuthenticateUser", "Home", FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("UserName",new { @class = "control-label col-md-2" })
                @Html.TextBox("UserName")
            </div>
            <div class="form-group">
                @Html.Label("Password", new { @class = "control-label col-md-2" })
                @Html.TextBox("Password")
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="login" class="btn btn-success" style="margin-top:10px" />
                </div>
            </div>
          
        }
    </div>
    <div class="col-md-3"></div>
</div>



