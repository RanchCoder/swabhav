@model List<TodoListMVC.ViewModels.SubTodoListVM>

@{
    ViewBag.Title = "ShowSubTodo";
}


<div class="page-header center-text">
    <h2>View All Sub TodoList</h2>
</div>


<div class="add-btn">
    <button class="btn btn-success" style="margin-top:10px; margin-bottom:10px;">
        @Html.ActionLink("Add", "AddSubTodo", "Home",new { id = ViewBag.TodoId},new { @class = "link-btn"})
    </button>

</div>

<table class="table">
    <tr>
        <th> Id</th>

        <th>Name</th>
        <th>Date</th>
        <th>Status</th>

        <th>Show | Delete</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(listItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(listItem => item.SubTodoName)
            </td>
            <td>
                @Html.DisplayFor(listItem => item.SubTodoDate)
            </td>
            <td>
                @if (item.SubTodoStatus)
                {
                    <p>Completed</p>
                }
                else
                {
                    <p>Pending</p>
                }
            </td>
            <td>
                <button class="btn btn-primary" style="margin-top:10px; margin-bottom:10px;">

                    <a href="@Url.Action("EditSubTodo", "Home",new { id=item.Id })">
                        <span class="glyphicon glyphicon-edit link-btn" aria-hidden="true">
                        </span>
                    </a>
                </button>

                <button class="btn btn-danger" style="margin-top:10px; margin-bottom:10px;">

                    <a href="@Url.Action("DeleteSubTodo", "Home",new { subTodoId=item.Id })">
                        <span class="glyphicon glyphicon-trash link-btn" aria-hidden="true">
                        </span>
                    </a>
                </button>

            </td>

        </tr>
    }
</table>

