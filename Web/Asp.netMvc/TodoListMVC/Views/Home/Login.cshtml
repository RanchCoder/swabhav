@model TodoListMVC.Models.Registration

@{
    ViewBag.Title = "Login";
}



@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>@ViewBag.Message</strong>
    </div>

}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="page-header center-text">
            <h2>Login Page</h2>
        </div>
        @using (Html.BeginForm("AuthenticateUser", "Home", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger", @style = "margin-left:30px;" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.PasswordFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", @style = "margin-left:30px;" })
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="login" class="btn btn-success" style="margin-top:10px" />
                </div>
            </div>
            <div class="form-btn">
                @Html.ActionLink("Sign up! Its free", "Registration", new { @style = "color:black;" })
            </div>
        }
    </div>
    <div class="col-md-3"></div>
</div>



