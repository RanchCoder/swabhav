@model TodoListMVC.ViewModels.RegistrationVM

@{
    ViewBag.Title = "Registration";
}


@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>@ViewBag.Message</strong>
    </div>

}


<div class="row">
    <div class="col-md-3"></div>
      
    <div class="col-md-8">
        <div class="page-header center-text">
            <h2>Registration Page</h2>
        </div>

        @using (Html.BeginForm("RegisterUser", "Home", FormMethod.Post))
        {
            <div class="form-group">

                @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-3" })
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">

                @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-3" })

                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">


                @Html.LabelFor(model => model.ConfirmPassword, "Renter Password", new { @class = "control-label col-md-3" })

                @Html.PasswordFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Register" class="btn btn-primary" style="margin-top:10px" />
                </div>
            </div>
        }
    </div>
    <div class="col-md-1"></div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>

    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</div>