@model TodoListMVC.ViewModels.AddTodoVM

@{
    ViewBag.Title = "AddTodo";
}



@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>@ViewBag.Message</strong>
    </div>

}

<div class="row">
    <div class="col-md-3"></div>

    <div class="col-md-6">

        <div class="page-header center-text">
            <h3>Add A Todo</h3>

        </div>
        @using (Html.BeginForm("SaveTodo", "Home", FormMethod.Post))
        {
            <div class="form-group">

                @Html.LabelFor(model => model.TodoName, new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.TodoName, new { htmlAttributes = new { @class = "form-control" } })
                <button type="submit" class="btn btn-light"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
            </div>
        }
    </div>

    <div class="col-md-3"></div>

</div>

