@model EmployeeLoginServiceApp.ViewModels.UserCredentialVM

@{
    ViewBag.Title = "Login";
}

<h2>Login Page</h2>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        @using (Html.BeginForm("AuthenticateUser", "Home", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger", @style = "margin-left:30px;" });
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", @style = "margin-left:30px;" });
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="login" class="btn btn-success" style="margin-top:10px" />
                </div>
            </div>
        }
    </div>
    <div class="col-md-3"></div>
</div>


